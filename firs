DROP FUNCTION IF EXISTS api.get_shape_points(integer);

CREATE OR REPLACE FUNCTION api.get_shape_points(shape_id integer)
  RETURNS TABLE (point_number integer, latitude numeric, longitude numeric) AS
$$
BEGIN
  RETURN QUERY
  WITH shape_points AS (
    SELECT segment, c.latitude, c.longitude
    FROM data.coastline c
    WHERE c.shape = shape_id
    ORDER BY segment
  )
  SELECT ROW_NUMBER() OVER () AS point_number, sp.latitude, sp.longitude
  FROM shape_points sp;
END;
$$
LANGUAGE plpgsql;

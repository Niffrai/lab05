CREATE OR REPLACE FUNCTION data.create_partition(y1 INTEGER, y2 INTEGER)
RETURNS VOID AS $$
DECLARE
    d0 TIMESTAMP;
    d1 TIMESTAMP;
BEGIN
    FOR y IN y1 .. y2 LOOP
        FOR m IN 1 .. 12 LOOP
            d0 := DATE_TRUNC('MONTH', TO_TIMESTAMP(CAST(y AS TEXT) || '-' || CAST(m AS TEXT) || '-01 00:00:00', 'YYYY-MM-DD HH24:MI:SS'));
            d1 := d0 + INTERVAL '1 month';
            EXECUTE FORMAT('CREATE TABLE IF NOT EXISTS data.measurement_part_y%sm%02d PARTITION OF data.measurement FOR VALUES FROM (%L) TO (%L)',
                y, m, d0, d1);
        END LOOP;
    END LOOP;
END;
$$ LANGUAGE PLPGSQL;

CREATE OR REPLACE VIEW data.partition_stats AS
SELECT
    relname AS partition_name,
    pg_total_relation_size(oid) AS total_size,
    pg_indexes_size(oid) AS index_size,
    reltuples AS row_count
FROM
    pg_class
WHERE
    relname LIKE 'measurement_part_y%'
    AND reltuples > 0
ORDER BY
    reltuples ASC;

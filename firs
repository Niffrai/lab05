CREATE OR REPLACE FUNCTION api.get_shape_points(shape_id integer)
  RETURNS TABLE (point_number integer, latitude numeric, longitude numeric) AS
$$
BEGIN
  RETURN QUERY
  SELECT segment, latitude, longitude
  FROM data.coastline
  WHERE shape = shape_id
  ORDER BY segment;
END;
$$
LANGUAGE plpgsql;
